<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/et_height"    style="@style/CustomEdittextStyle"

                android:hint="Enroll No."
                android:inputType="text"

               >


            </EditText>
        <!--</android.support.design.widget.TextInputLayout>-->


        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="20dp">-->

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/et_height"   style="@style/CustomEdittextStyle"


                android:drawableRight="@drawable/calendar_schedular"

                android:drawableTint="@color/icon_color"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="Date of Birth(dd-MM-yyyy)"
                android:inputType="none"
                android:maxLines="1"

                />

        <!--</android.support.design.widget.TextInputLayout>-->



        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_size"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:text="Login"
            style="@style/CustomButtonStyle"
            />
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dip"
            android:background="?android:attr/selectableItemBackground"
            android:padding="7dp"
            android:text="Forgot Password?"
            android:textColor="#0f2d49"
            android:textStyle="bold"
            android:visibility="visible" />





    </LinearLayout>

</LinearLayout>