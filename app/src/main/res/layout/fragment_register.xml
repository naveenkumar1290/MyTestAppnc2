<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:background="?android:attr/selectableItemBackground"
        android:padding="7dp"
        android:text="Student Registration"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="0dp">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:orientation="vertical">

                <!-- <android.support.design.widget.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">-->

                <EditText
                    android:id="@+id/name"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/et_height"   android:hint="Name"
                    android:inputType="text">


                </EditText>
                <!--</android.support.design.widget.TextInputLayout>-->


                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >-->

                <EditText
                    android:id="@+id/father_name"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"

                    android:layout_height="@dimen/et_height"


                    android:hint="Father's Name"
                    android:inputType="text">


                </EditText>
                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >-->

                <EditText
                    android:id="@+id/email"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/et_height"

                    android:hint="User Email"
                    android:inputType="textEmailAddress">


                </EditText>
                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >-->

                <EditText
                    android:id="@+id/mobile"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/et_height"

                    android:hint="Mobile"
                    android:inputType="textEmailAddress"

                    >


                </EditText>
                <!--</android.support.design.widget.TextInputLayout>-->


                <Spinner
                    android:id="@+id/spnr_board"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:backgroundTint="@color/icon_color"
                    android:hint="Board/University:"
                    android:paddingLeft="0dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spnr_course"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:backgroundTint="@color/icon_color"
                    android:paddingLeft="0dp" />


                <LinearLayout
                    android:id="@+id/ll_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/et_margin_top"
                        android:gravity="left"
                        android:text="Subject" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:gravity="left"
                    android:text="Session From" />


                <EditText
                    android:id="@+id/session_from_dt"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
android:visibility="gone"
                    android:drawableRight="@drawable/calendar_schedular"

                    android:drawableTint="@color/icon_color"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="From Date(MM-yyyy)"
                    android:inputType="none"
                    android:maxLines="1" />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">
<!-- android:layout_height="@dimen/et_height"-->
                    <Spinner
                        android:id="@+id/spnr_session_mnth"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                             android:backgroundTint="@color/icon_color"
                        android:paddingLeft="0dp" />
                    <Spinner
                        android:id="@+id/spnr_session_year"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:layout_marginLeft="2dp"
                            android:backgroundTint="@color/icon_color"
                        android:paddingLeft="0dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:gravity="left"
                    android:visibility="gone"
                    android:text="Session To" />


                <EditText
                    android:id="@+id/session_to_dt"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/calendar_schedular"
                    android:drawableTint="@color/icon_color"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="To Date(MM-yyyy)"
                    android:inputType="none"
                    android:maxLines="1"
                    android:visibility="gone"

                    />


                <!-- <android.support.design.widget.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp">
 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:gravity="left"
                    android:text="Date of Birth" />


                <EditText
                    android:id="@+id/dob"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/et_height"
                    android:drawableRight="@drawable/calendar_schedular"

                    android:drawableTint="@color/icon_color"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="DOB(dd-MM-yyyy)"
                    android:inputType="none"
                    android:maxLines="1" />


                <!--</android.support.design.widget.TextInputLayout>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:gravity="left"
                    android:text="Qualification (Egibility)" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/qualification_board"
                        style="@style/CustomEdittextStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/et_height"
                        android:hint="Board"
                        android:inputType="text"

                        />


                    <EditText
                        android:id="@+id/qualification_class"
                        style="@style/CustomEdittextStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/et_height"
                        android:hint="Class"
                        android:inputType="textEmailAddress"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/qualification_passingYear"
                        style="@style/CustomEdittextStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/et_height"

                        android:drawableRight="@drawable/calendar_schedular"

                        android:drawableTint="@color/icon_color"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="Passing Year(yyyy)"
                        android:inputType="none"
                        android:maxLines="1" />


                    <EditText
                        android:id="@+id/marks_obtain"
                        style="@style/CustomEdittextStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/et_height"    android:hint="Marks Obtain"
                        android:inputType="textEmailAddress"

                        />

                    <EditText
                        android:id="@+id/division_grade"
                        style="@style/CustomEdittextStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/et_height"
                        android:hint="Division/Grade"
                        android:inputType="textEmailAddress"

                        />
                </LinearLayout>
                <!-- <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">
                -->
                <EditText
                    android:id="@+id/course_fee"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/et_height"     android:hint="Course Fee"
                    android:inputType="number">


                </EditText>
                <!--</android.support.design.widget.TextInputLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="left"
                        android:text="Image" />

                    <Button
                        android:id="@+id/btnimage"
                        style="@style/CustomButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_size"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape"
                        android:text="Choose File" />


                </LinearLayout>

                <TextView


                    android:id="@+id/text_imgPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_margin_top"
                    android:gravity="left"

                    android:text="No File Choosen" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        style="@style/CustomButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_size"
        android:background="@drawable/button_shape"
        android:text="Register Me" />


</LinearLayout>